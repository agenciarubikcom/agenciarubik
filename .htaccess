<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirección de /es y /en a /es/index y /en/index respectivamente
    RewriteCond %{REQUEST_URI} ^/(es|en)/?$ [NC]
    RewriteRule ^(es|en)/?$ /%1/index [L,R=301]

    # Redirección de /index a /inicio
    RewriteRule ^index/?$ /inicio [L,R=301]

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^([^/]+)/?$ $1.php [L]
    RewriteRule ^(en|es)/([^/]+)$ $2.php [L,QSA]
</IfModule>